{% extends '@web/layout-base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block main %}
<main class="flex-shrink-0">
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-6 text-center">
                <h1>oe-modules.com</h1>
                <p class="text-muted">
                    {{ 'page.home.available_module_for'|trans({}, 'pages') }} <a href="https://www.open-emr.org/" class="text-decoration-none" target="_blank">openEmr</a>. <br>
                    {{ 'page.home.all_modules_are_registered_on'|trans({}, 'pages') }} <a href="https://packagist.org" class="text-decoration-none" target="_blank">packagist.org</a>.
                </p>
            </div>
        </div>

        <div class="row mt-5 justify-content-center">
            <div class="col-6 justify-content-center">
                <form class="form">
                    <input class="form-control" type="search"
{#                           TODO: translate#}
                           name="search" placeholder="Typing To Search Modules..."
                           hx-post="/search/modules"
                           hx-trigger="keyup changed delay:500ms, search, load"
                           hx-target="#search-results"
                           hx-indicator=".htmx-indicator">
                </form>
            </div>
        </div>

        <div class="row mt-1 justify-content-center">
            <div class="col-6 justify-content-center">
                <div class="htmx-indicator spinner-border text-success col-1" role="status">
                    <span class="visually-hidden"></span>
                </div>
                    <div id="search-results"></div>
            </div>
        </div>

    </div>
</main>
{% endblock %}
