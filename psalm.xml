<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="false"
    errorBaseline="psalm-baseline.xml"
    cacheDirectory="var/cache_tools/psalm"
>
    <projectFiles>
        <directory name="src"/>
        <directory name="_catalog/src"/>
        <directory name="_bffWeb/src"/>
        <directory name="_bffApi/src"/>
        <directory name="_metadata/src"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <!-- False positive -->
        <!-- All controller -->
        <UnusedClass>
            <errorLevel type="suppress">
                <directory name="_bffWeb/src/AdapterForWeb" />
                <directory name="src/Controller" />
                <file name="_catalog/src/Infrastructure/EcotoneConfiguration.php" />
            </errorLevel>
        </UnusedClass>


        <!-- BffApi module -->
        <MixedMethodCall>
            <errorLevel type="suppress">
                <file name="_bffApi/src/Infrastructure/Framework/Extension/BffApiModuleExtension.php" />
            </errorLevel>
        </MixedMethodCall>
        <UndefinedMethod>
            <errorLevel type="suppress">
                <file name="_bffApi/src/Infrastructure/Framework/Extension/BffApiModuleExtension.php" />
            </errorLevel>
        </UndefinedMethod>
        <!-- End BffApi module -->
        <!-- Metadata module -->
        <PossiblyNullArgument>
            <errorLevel type="suppress">
                <file name="_metadata/src/Core/MetadataModule.php" />
            </errorLevel>
        </PossiblyNullArgument>
        <!-- End Metadata module -->
    </issueHandlers>


    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin"/>
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin">
            <containerXml>var/cache/dev/App_KernelDevDebugContainer.xml</containerXml>
        </pluginClass>
    </plugins>
</psalm>

